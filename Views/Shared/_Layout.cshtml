<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AirQuality</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AirQuality.styles.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        /* Header Styles */
                body {
            margin: 0;
            font-family: 'Open Sans', sans-serif;
            background-color: #f4f4f4;
        }

        .header-container {
            background-color: #ffffff;
            color: #004085;
            padding: 20px 5%;
            position: relative;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
        }

        .site-title {
            font-weight: 700;
            font-size: 1.5em;
            margin: 0;
        }

        .nav-links {
            display: flex;
            flex-wrap: wrap; /* Allow navigation links to wrap to the next line on smaller screens */
            justify-content: center;
            gap: 20px;
            margin-top: 20px;
        }

        .nav-link {
            text-decoration: none;
            color: #004085;
            padding: 10px 15px;
            border-radius: 25px;
            transition: background-color 0.3s, color 0.3s;
            border: 1px solid transparent;
        }

        .nav-link:hover {
            background-color: #e9ecef;
            color: #0056b3;
            border: 1px solid #007bff;
            text-decoration: none;
        }

        .nav-link:focus {
            outline: none;
        }

        /* Media query for smaller screens (e.g., mobile devices) */
        @@media (max-width: 600px) {
            .nav-links {
                text-align: center; /* Center-align navigation links */
            }

            .nav-link {
                margin-top: 10px; /* Add spacing between navigation links */
            }
        }
        /* Footer Styles */
        footer .footer-container {
            padding: 20px 5%;
            background-color: #003366; /* Darker blue background */
            color: #e9ecef; /* Light gray text */
            text-align: center;
        }

        footer .footer-text {
            color: #e9ecef;
            margin: 10px 0;
            font-size: 14px;
            line-height: 10px !important;
        }

        footer .footer-container p.footer-text a.footer-link {
            color: #80bfff !important; /* Brighter blue link color with !important */
            text-decoration: none !important; /* No underline with !important */
            margin: 0 10px;
            transition: background-color 0.3s, color 0.3s;
            border-radius: 5px;
            padding: 2px 5px;
            font-weight: bold; /* Bold for emphasis */
            border-bottom: none !important; /* No border at the bottom */
        }

            footer .footer-container p.footer-text a.footer-link:hover {
                color: #003366 !important; /* Dark blue text on hover */
                background-color: #e9ecef !important; /* Light gray background on hover */
            }

        footer .footer-icon {
            margin-right: 5px;
        }

        .clearfix::after {
            content: "";
            display: table;
            clear: both;
        }

    </style>
</head>
<body>
    <header>
        <div class="header-container">
            <h1 class="site-title">NYC Air Quality</h1>
            <nav class="nav-links">
                <a href="index.html" class="nav-link">Home</a>
                <a href="airquality-overview.html" class="nav-link">Overview</a>
                <a href="datamodel.html" class="nav-link">Data Model</a>
                <a href="health.html" class="nav-link">Health Impact</a>
                <a href="about.html" class="nav-link">About Us</a>
            </nav>
        </div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted clearfix">
        <div class="footer-container">
            <p class="footer-text"><i class="fas fa-copyright footer-icon"></i> 2023 NYC Air Quality Dashboard</p>
            <p class="footer-text"><i class="fas fa-database footer-icon"></i> Data sourced from<a href="https://data.cityofnewyork.us/Environment/Air-Quality/c3uy-2p5r" class="footer-link" target="_blank" rel="noopener noreferrer">City of New York Environmental Data</a></p>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
